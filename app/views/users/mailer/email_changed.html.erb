<p><%= t("devise.mailer.email_changed.greeting", recipient: @resource.email) %></p>

<% if @resource.try(:unconfirmed_email?) %>
  <p><%= t("devise.mailer.email_changed.message_unconfirmed", email: @resource.unconfirmed_email) %></p>
<% else %>
  <p><%= t("devise.mailer.email_changed.message_confirmed", email: @resource.email) %></p>
<% end %>
