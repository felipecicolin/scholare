<%= render CenterContent::Component.new(width: 8) do %>
  <h1 class="mb-3 text-center"><%= t("devise.passwords.new.forgot_your_password") %></h1>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs mb-3">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>

    <div class="form-actions mb-3">
      <%= f.button :submit, t("devise.passwords.new.send_me_reset_password_instructions"), class: "btn btn-primary" %>
    </div>
  <% end %>
  <%= render "users/shared/links" %>
<% end %>
