<%= render CenterContent::Component.new(width: 9) do %>
  <%= simple_form_for resource do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs mb-3">
      <%= f.input :name, required: false %>
      <%= f.association :school_class, prompt: true, required: false, input_html: { class: "form-select" }, collection: school_classes %>
      <%= f.input :test_date, required: false, input_html: { class: "form-select me-2" } %>
      <%= f.input :value, required: false, input_html: { class: "form-control" } %>
    </div>

    <%= render FormActions::Component.new(form_object: f, back_path: tests_path) %>
  <% end %>
<% end %>
