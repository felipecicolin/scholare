<div class="container mt-2">
  <nav class="navbar navbar-expand-lg" aria-label="Fifth navbar example">
    <div class="container-fluid">
      <%= link_to vite_image_tag("images/logo.svg"), root_path, class: "px-2" %>

      <%= link_to root_path, class: "navbar-brand" do %>
        <span class="fs-3">Scholare</span>
      <% end %>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample05" aria-controls="navbarsExample05" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarsExample05">

        <% if @current_user %>
          <div class="nav-item dropdown ms-auto">
            <button class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown" type="button" aria-expanded="false">
              <%= @current_user.email %>
            </button>
            <ul class="dropdown-menu">
              <li>
                <%= link_to t("devise.registrations.edit.edit_account"), edit_user_registration_path, class: "dropdown-item" %>
              </li>
                <div class="dropdown-divider"></div>
              <li>
                <%= link_to t("nav.sign_out"), destroy_user_session_path, class: "dropdown-item", data: { turbo_method: :delete } %>
              </li>
            </ul>
          </div>
        <% else %>

          <div class="ms-auto">
            <%= link_to t("nav.check_your_grades"), test_grades_path, class: "text-decoration-none" %>
            <%= link_to t("nav.sign_in"), new_user_session_path, class: "btn mx-1" %>
            <%= link_to t("nav.sign_up"), new_user_registration_path, class: "btn btn-primary" %>
          </div>

        <% end %>

      </div>
    </div>
  </nav>
</div>

