<%= simple_form_for @school_class, url: @url, method: @method do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs mb-3">
    <%= f.input :name, required: false, autofocus: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, @submit_text, class: "btn btn-primary" %>
    <%= link_to t("shared.buttons.back"), user_school_classes_path(user_id: @current_user.id),
                                                                   class: "btn btn-secondary mx-2" %>
  </div>
<% end %>
