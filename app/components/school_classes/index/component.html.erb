<%= render CenterContent::Component.new(width: 8) do %>
  <h1 class="mb-3 text-center"><%= t("activerecord.models.school_class").pluralize %></h1>

    <% if school_classes.any? %>
      <table class="table table-hover table-responsive">
        <thead>
          <tr>
            <th scope="col"><%= t("activerecord.attributes.school_class.name") %></th>
            <th/>
          </tr>
        </thead>

        <tbody>

          <% school_classes.each do |school_class| %>
            <tr class="align-middle">
              <td>
                <%= school_class.name %>
              </td>

              <td class="align-middle text-end">
                <%= link_to t("shared.buttons.edit"), edit_school_class_path(id: school_class.id),
                                                                              class: "text-decoration-none px-2" %>

                <%= button_to t("shared.buttons.destroy"), school_class_path(id: school_class.id),
                                                                              method: :delete,
                                                                              class: "btn text-danger text-decoration-none px-2" %>
              </td>
            </tr>
          <% end %>

        </tbody>
      </table>

      <div class="d-flex justify-content-center py-2">
        <%== pagy_bootstrap_nav(pagy) %>
      </div>
    <% end %>


  <% if school_classes.empty? %>
    <div class="alert alert-info">
      <%= t("shared.messages.no_records") %>
    </div>
  <% end %>

  <%= link_to t("shared.buttons.add"), new_school_class_path, class: "btn btn-primary" %>
  <%= link_to t("shared.buttons.back"), "javascript:history.back()", class: "btn btn-secondary mx-2" %>
<% end %>
